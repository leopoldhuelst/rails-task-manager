<h1>All tasks</h1>
<ul>
<% @tasks.each do |task|%>
<li>
  <%= link_to "#{task.title}", task_path(task.id) %>
  <%="Completed: #{task.completed}"%>
  <%= link_to "Delete Task", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" }  %>
</li>
<% end %>
</ul>
<%= link_to 'Add a new Task', tasks_new_path %>
